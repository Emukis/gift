    <script>
        let currentReason = 0;
        function startExperience() {
            document.querySelector('.start-container').style.display = 'none';
            document.querySelector('body').style.backgroundColor = '#c8e6c9';
            document.getElementById('diary').style.display = 'block';
        }
        function nextReason() {
            let reasons = document.querySelectorAll('.reason');
            let conclusion = document.querySelector('.conclusion');
            if (currentReason < reasons.length) {
                reasons[currentReason].classList.remove('active');
            }
            currentReason++;
            if (currentReason < reasons.length) {
                reasons[currentReason].classList.add('active');
            } else {
                conclusion.classList.add('active');
                document.querySelector('.next-btn').style.display = 'none';
            }
        }
    </script>
